    <!-- JavaScript for Language Toggle -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const enBtn = document.getElementById('en-btn');
            const ptBtn = document.getElementById('pt-btn');
            
            // Show English content by default
            showLanguage('en');
            
            // Add event listeners to buttons
            enBtn.addEventListener('click', function() {
                showLanguage('en');
                setActiveButton(enBtn, ptBtn);
                updateButtonText('en');
            });
            
            ptBtn.addEventListener('click', function() {
                showLanguage('pt');
                setActiveButton(ptBtn, enBtn);
                updateButtonText('pt');
            });
            
            function showLanguage(lang) {
                // Hide all language-specific elements
                const allElements = document.querySelectorAll('.lang-en, .lang-pt');
                allElements.forEach(el => {
                    el.style.display = 'none';
                });
                
                // Show elements for selected language
                const langElements = document.querySelectorAll('.lang-' + lang);
                langElements.forEach(el => {
                    el.style.display = 'block';
                });
            }
            
            function setActiveButton(activeBtn, inactiveBtn) {
                activeBtn.classList.add('active');
                inactiveBtn.classList.remove('active');
            }
            
            function updateButtonText(currentLang) {
                if (currentLang === 'en') {
                    enBtn.textContent = 'English';
                    ptBtn.textContent = 'Portuguese';
                } else {
                    enBtn.textContent = 'Inglês';
                    ptBtn.textContent = 'Português';
                }
            }
        });
    </script>
</body>
